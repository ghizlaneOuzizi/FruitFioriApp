<core:FragmentDefinition xmlns:core="sap.ui.core"
                         xmlns="sap.m">
 <Select id="dropdown" items = "{/cities}">
    <items>
        <core:Item text="{name}" key="{name}">
        </core:Item>
    </items>
  </Select>
  <ComboBox id="combox" items="{/cities}">
    <items>
         <core:Item text="{name}" key="{name}"></core:Item>
    </items>
  </ComboBox>
  <MultiComboBox id="mcombox" items="{/cities}">
    <items>
          <core:Item text="{name}" key="{name}"></core:Item>
    </items>
   </MultiComboBox>
</core:FragmentDefinition>